generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Creator {
    id          String  @id @default(cuid())
    fullName    String
    creatorType String
    Media       Media[]

    @@map("creators")
}

model Media {
    id        String  @id @default(cuid())
    mediaName String
    mediaType String
    creator   Creator @relation(fields: [creatorId], references: [id])
    creatorId String

    @@map("media")
}
